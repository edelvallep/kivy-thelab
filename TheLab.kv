WidgetsExample:

<WidgetsExample>
    cols: 3
    Button:
        text: "Click here"
        on_press: root.on_button_click()
    Label:
        text: root.my_text

<PageLayoutExample@PageLayout>
    MainWidget:
    BoxLayoutExample:
    AnchorLayoutExample:
    GridLayoutExample:

<ScrollViewExample@ScrollView>
    StackLayoutExample:
        size_hint: 1, None
        height: self.minimum_height

<StackLayoutExample>:
    # left-right top-bottom
    # orientation: "lr-tb"
    # padding: ("20dp", "20dp", "20dp", "20dp")
    # spacing: "20dp", "20dp"

<GridLayoutExample>:
    # rows
    # columns
    # cols: 3
    rows: 2
    Button:
        text: "A"
        size_hint: None, 1
        width: "60dp"
    BoxLayoutExample:
    Button:
        text: "C"
    Button:
        text: "D"
        size_hint: None, 1
        width: "60dp"
    Button:
        text: "E"
    Button:
        text: "F"

<AnchorLayoutExample>:
    #right, left, center
    anchor_x: "left"
    #bottom, top, center
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: "A"
        Button:
            text: "A"


<BoxLayoutExample>
    orientation: "horizontal"
    Button:
        text: "A"
        size_hint: .5, None
        # size: "40dp", "40dp"
        # width: "100dp"
        height: "60dp"
        # x, center_x, right
        # y, center_y, top
        po_hint: {"x":.5}

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"

    Label:
        text: "C"

<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "80dp"
        pos: "100dp", "200dp"
        color: 0, 0 ,1, 1

    Label:
        text: "Hello2"
        size: "100dp", "80dp"
        pos: "200dp", "300dp"
